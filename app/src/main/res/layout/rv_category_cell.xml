<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mCvColor"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardBackgroundColor="@color/color_E5F9FE"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="@dimen/dp_5">

    <com.victor.clips.widget.CircleBorderImageView
        android:id="@+id/mCivCategoryAvatar"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_50"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_img"
        app:aiv_BoarderColor="@color/white"
        app:aiv_BoarderWidth="@dimen/dp_0"
        app:aiv_ShowBoarder="false"/>

    <com.victor.clips.widget.ColorTextView
        android:id="@+id/mTvCategoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_200"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/dp_20"
        android:gravity="center"
        android:text="从你的全世界路过"
        android:textColor="?attr/colorPrimary"
        android:textColorLink="?attr/colorPrimaryDark"
        android:textSize="@dimen/dp_28"/>

    <ImageView
        android:id="@+id/mIvCategoryChecked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_marginRight="@dimen/dp_50"
        android:src="@drawable/ic_check"/>


</android.support.v7.widget.CardView>
