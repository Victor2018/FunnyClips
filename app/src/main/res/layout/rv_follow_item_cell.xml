    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="@dimen/dp_640"
        android:layout_height="@dimen/dp_360"
        android:layout_margin="@dimen/dp_10"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardBackgroundColor="@color/color_E6FCFC"
        app:cardElevation="@dimen/dp_5">

        <ImageView
            android:id="@+id/mIvFollowCellPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_video_img"/>
        <TextView
            android:id="@+id/mTvFollowCellTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:background="@color/alpha_blue"
            android:textSize="@dimen/dp_22"
            android:textAlignment="center"
            android:textColor="@color/white"
            tools:text="The Hobbit"
            android:gravity="center"
            android:lines="2"
            android:maxLines="2" />
    </android.support.v7.widget.CardView>