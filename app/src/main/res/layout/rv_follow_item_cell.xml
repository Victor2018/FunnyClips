<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dp_640"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_10">

    <android.support.v7.widget.CardView
        android:id="@+id/mCvFollowImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_5">

        <ImageView
            android:id="@+id/mIvFollowCellPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:transitionName="@string/transition_video_img"/>

    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/mTvFollowCellTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mCvFollowImage"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/dp_22"
        android:textColor="@color/color_8A000000"
        tools:text="The Hobbit"
        tools:background="@color/alpha_blue"
        android:gravity="center_vertical"
        android:lines="2"
        android:maxLines="2" />
</android.support.constraint.ConstraintLayout>
